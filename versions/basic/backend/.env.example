# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
NODE_ENV=development
PORT=3010
API_VERSION=v1

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=license_app
DB_PASSWORD=StrongPassword123!
DB_NAME=license_management
DB_CONNECTION_LIMIT=10

# =====================================================
# CONFIGURACIÓN DE JWT
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# CONFIGURACIÓN DE LICENCIA
# =====================================================
LICENSE_TYPE=basic
LICENSE_KEY=BASIC-XXXX-XXXX-XXXX-XXXX
VERIFICATION_INTERVAL_DAYS=7
EXPIRATION_WARNING_DAYS=7

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=30

# =====================================================
# CONFIGURACIÓN DE RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE EMAIL
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@systemsegure.com

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# =====================================================
# FRONTEND URL (CORS)
# =====================================================
FRONTEND_URL=http://localhost:3011
ALLOWED_ORIGINS=http://localhost:3011,http://localhost:3010

# =====================================================
# CARACTERÍSTICAS HABILITADAS (BASIC VERSION)
# =====================================================
FEATURE_DASHBOARD=true
FEATURE_BASIC_REPORTS=true
FEATURE_USER_MANAGEMENT=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_API_ACCESS=false
FEATURE_CUSTOM_BRANDING=false
MAX_USERS=5
MAX_DEVICES=3
